{
  "name": "molehill-ui",
  "version": "0.0.0",
  "description": "Design system for React applications",
  "main": "index.js",
  "repository": "git@github.com:wesleycole/molehill-ui.git",
  "author": "Wes Cole <wesley.cole87@gmail.com>",
  "license": "MIT",
  "private": "true",
  "workspaces": [
    "packages/*"
  ],
  "preconstruct": {
    "packages": [
      "packages/*"
    ]
  },
  "scripts": {
    "postinstall": "preconstruct dev",
    "build": "preconstruct build",
    "release": "yarn build && lerna publish",
    "test": "jest",
    "test:watch": "jest --watch",
    "storybook": "yarn workspace @molehill-ui/storybook storybook"
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx}": [
      "eslint --cache --fix",
      "jest --findRelatedTests"
    ],
    "*.{js,ts,jsx,tsx,json,md}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.12.16",
    "@babel/plugin-proposal-optional-chaining": "^7.12.13",
    "@babel/preset-env": "^7.13.15",
    "@babel/preset-react": "^7.12.13",
    "@babel/preset-typescript": "^7.12.13",
    "@preconstruct/cli": "^2.0.3",
    "babel-jest": "^26.6.3",
    "babel-plugin-tester": "^10.0.0",
    "core-js-compat": "^3.10.1",
    "eslint": "^7.19.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.3",
    "eslint-plugin-react": "^7.22.0",
    "jest": "^26.6.3",
    "lerna": "^3.22.1",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1",
    "ts-jest": "^26.5.1",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3"
  },
  "dependencies": {}
}
